@model IEnumerable<ProyectoBanco.Models.Cuenta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Dpi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreCuenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saldo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Dpi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreCuenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.saldo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
